<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/">
        <h4>Search Restaurant</h4>
        <div class="row align-items-end">
          <div class="col-9">
            <div class="input-group">
              <input type="text" name="keyword" class="form-control" placeholder="type restaurant & category"
                aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button" />
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          </div>
          <div class="col-3 d-flex justify-content-end mt-3">
            <div>
              <select class="form-select" aria-label="select sort" role="button" name="sort"
                onchange="this.form.submit()">
                <option {{selected sortSelected.default}} value="default">show all</option>
                <option {{selected sortSelected.AtoZ}} value="AtoZ">A → Z</option>
                <option {{selected sortSelected.ZtoA}} value="ZtoA">Z → A</option>
                <option {{selected sortSelected.category}} value="category">category</option>
                <option {{selected sortSelected.location}} value="location">location</option>
              </select>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      {{#if restaurants}}
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="mb-3">
          <div class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs yooo"></i>
                </span>

              </div>
            </div>
          </div>
          <div class="text-end">
            <a href="/restaurants/{{this._id}}" role='button' class="index-btn-detail btn text-white"
              tabindex="-1">detail</a>
            <a href="/restaurants/{{this._id}}/edit" class="index-btn-edit btn" role='button'>edit</a>
            <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger" onclick="return confirm('Are u sure?');">delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
      {{else}}
      <div class="d-flex flex-column align-items-center bg-secondary text-white pt-3">
        <p class="text-center">There is no data here, please add a new one at the upper right</p>
      </div>
      {{/if}}
    </div>
  </div>
</div>